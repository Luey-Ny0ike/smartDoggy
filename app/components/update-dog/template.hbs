{{#if updateDogForm}}
  <h3>Update dog details</h3>
  <div class="col-md-4">
    <form>
      <div class="form-group">
        <label for="name">Name</label> {{input value=name id="name" class="form-control" placeholder=dog.name}}
      </div>


      <div class="form-group">
        <label for="age">Age</label> {{input value=age id="age" class="form-control" placeholder=dog.age}}
      </div>


      <div class="form-group">
        <label for="breed">Breed</label> {{input value=breed id="breed" class="form-control" placeholder=dog.breed}}
      </div>

      <div class="form-group">
        <label for="gender">Gender</label> {{input value=gender id="gender" class="form-control" placeholder=dog.gender}}
      </div>


      <div class="form-group">
        <label for="image1">1st image</label> {{input value=image1 id="image1" class="form-control" placeholder=dog.image1}}
      </div>

      <div class="form-group">
        <label for="image2">2nd image</label> {{input value=image2 id="image2" class="form-control" placeholder=dog.image2}}
      </div>

      <div class="form-group">
        <label for="image3">3rd image</label> {{input value=image3 id="image3" class="form-control" placeholder=dog.image3}}
      </div>

      <div class="form-group">
        <label for="color">Color</label> {{input value=color id="color" class="form-control" placeholder=dog.color}}
      </div>

      <div class="form-group">
        <label for="nickname">Nickname</label> {{input value=nickname id="nickname" class="form-control" placeholder=dog.nickname}}
      </div>


      <div class="form-group">
        <label for="title">Title</label> {{input value=title id="title" class="form-control" placeholder=dog.title}}
      </div>

      <div class="form-group">
        <label for="recomendation">Recomendation</label> {{input value=breed id="recomendation" class="form-control" placeholder=dog.recomendation}}
      </div>


      <div class="form-group">
        <label for="description">Description</label> {{textarea value=dog.description id="description" class="form-control" }}
      </div>
      <button class="btn btn-success" {{action 'update' dog}}>Save</button>
      <button class="btn btn-primary" {{action 'updateFormHide'}}>Hide</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'updateDogForm'}}>Update</button>
{{/if}}
