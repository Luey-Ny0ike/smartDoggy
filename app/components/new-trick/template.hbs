{{#if addNewTrick}}
<h1>New trick</h1>
<div class="row">
<div class="col-md-4">
  <form>
    <div class="form-group">
      <label for="title">Title</label> {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="step1">Step 1</label> {{input value=step1 id="step1" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="step2">Step 2</label> {{input value=step2 id="step2" class="form-control" }}
    </div>

    <div class="form-group">
      <label for="step3">Step 3</label> {{textarea value=step3 id="step3" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="step4">Step 4</label> {{textarea value=step4 id="step4" class="form-control"}}
    </div>


    <div class="form-group">
      <label for="image1">1st image</label> {{input value=image1 id="image1" class="form-control"}}
    </div>


    <div class="form-group">
      <label for="image2">2nd image</label> {{input value=image2 id="image2" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="extratips">Extra tips</label> {{input value=extratips id="extratips" class="form-control"}}
    </div>


    <div class="form-group">
      <label for="video">Video url </label> {{input value=video id="video" class="form-control"}}
    </div>

    <button class="btn btn-success" {{action 'saveTrick1' trick}}>Save</button>
    <button class="btn btn-primary" {{action 'trickFormHide'}}>Hide</button>
  </form>
</div>
</div>
{{else}}
  <button class="btn btn-success"{{action 'trickFormShow'}}>New Trick</button>
  {{/if}}
